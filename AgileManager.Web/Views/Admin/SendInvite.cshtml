@{
    ViewBag.Title = "Send invite to user";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="form-group">
            @Html.Label("labelEmail", "E-mail", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input name="email" type="email" class="form-control" autofocus />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send invite" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
